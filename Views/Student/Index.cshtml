<div class="container">
    <div class="info">
        <div class="row">
            @*<div class="col-12 col-md-4 text-center">
                <img src="./img/misha.jpg" alt="Raised circle image" class="img-fluid rounded-circle shadow-lg" style="width: 180px;">
            </div>*@
            <div class="col-12 col-md-8 d-flex flex-column align-items-center align-items-lg-start">
                <div class="d-flex flex-row align-items-start mt-3 mt-lg-0">
                    <div class="name">
                        <h2 class="mb-0">@User.Identity.Name.ToString().Split('@')[0]</h2>
                    </div>
                </div>
                <div class="stats d-flex flex-row align-items-center align-items-lg-start text-center text-lg-left">
                    <div class="posts ml-2 ml-lg-0">
                        <p class="lead">
                            <b>@Model.PassedCourses.Count</b> passed courses |
                        </p>
                    </div>
                    <div class="posts">
                        @if (@Model.CurrentCourses.Count == 1)
                        {
                            <p class="lead"><b>@Model.CurrentCourses.Count</b> active course </p>
                        }
                        else
                        {
                            <p class="lead"><b>@Model.CurrentCourses.Count</b> active courses </p>
                        }
                    </div>
                    @*<div class="posts"><p class="lead"><b>6.6m</b> followers</p></div>
                        <div class="posts"><p class="lead"><b>201</b> following</p></div>*@
                </div>
                @*<p class="lead mb-0 mt-2"><b>Ella Yelich-O'Connor</b></p>
                    <p class="lead text-center text-lg-left">Let's let things come out of the woodwork.  I'll give you my best side, tell you all my best lies.  Yeah, awesome right?</p>*@
            </div>
        </div>
        <form asp-controller="Student" asp-action="Edit" enctype="multipart/form-data">
            @*<h3 style="padding-bottom:25px; text-align:center;">@Model.Course.Signature @Model.Course.Name Course</h3>*@
            <label for="party">First name:</label>
            <input class="form-control" asp-for="@Model.FirstName" type="text" placeholder="@Model.FirstName" />
            <label for="party">Last name:</label>
            <input class="form-control" asp-for="@Model.LastName" type="text" placeholder="@Model.LastName" />
            <hr />
            <h6>Choose what kind of lecture materials you want to see:</h6>
            <label>Text Materials: </label>
            @Html.EditorFor(x => x.ShowTextMaterials)
            @*<label>Exam</label>*@
            <br />
            <label>Video Materials: </label>
            @Html.EditorFor(x => x.ShowVideoMaterials)
            <br />
            <br />
            <input type="hidden" name="Id" asp-for="@Model.Id" value="@Model.Id" />

            <button class="btn btn-outline-secondary btn-outline-info" style="text-align:right; margin-bottom: 1em;">Update</button>
        </form>
    </div>
    <hr />
    <div class="navigation d-flex justify-content-center">
        <ul class="nav nav-primary nav-tabs mt-3 d-flex flex-column flex-md-row">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#currentCourse">
                    <i class="far fa-bookmark"></i> Courent Courses
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#passedCourses">
                    <i class="fas fa-th"></i> Passed Courses
                </a>
            </li>
            @*<li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#tagged">
                        <i class="far fa-id-badge"></i> Tagged
                    </a>
                </li>*@
        </ul>
    </div>
    <div class="profile-tabs tab-content">
        <div class="tab-pane fade show active text-center" id="currentCourse">
            @if (Model.CurrentCourses != null)
            {
                @foreach (var currCourse in Model.CurrentCourses)
                {
                    <div class="card">
                        @*<img class="card-img-top" src="https://jobspace.bg/company-files/11/177905061520210611114756.png" alt="Card image cap">*@
                        <div class="card-body">
                            <h5 class="card-title">@currCourse.Signature @currCourse.Name</h5>
                            <p class="card-text">@currCourse.Description</p>
                        </div>
                        <div class="card-footer">
                            <div class="card-footer">
                                @*<small class="text-muted">Last updated 3 mins ago</small>*@
                                <a class="nav-link text-dark" asp-route-courseId="@currCourse.Id" asp-controller="Course" asp-action="Index" style="text-decoration: none;">Go to course</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="lead"><span class="text-danger"><i class="far fa-frown-open"></i></span> Nothing started yet.</p>
            }
            <br />
        </div>
        <div class="tab-pane fade text-center" id="passedCourses">
            @*@foreach (var passedCourse in Model.PassedCourses)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@passedCourse.Signature @passedCourse.Name</h5>
                        <p class="card-text">@passedCourse.Description</p>
                    </div>
                    <div class="card-footer">
                        <div class="card-footer">
                            <a class="nav-link text-dark" asp-route-courseId="@passedCourse.Id" asp-controller="Course" asp-action="Index" style="text-decoration: none;">Go to course</a>
                        </div>
                    </div>
                </div>
            }*@
            @foreach (var item in Model.PassedCoursesGrade)
            {
                <div class="card">
                    @*<img class="card-img-top" src="https://jobspace.bg/company-files/11/177905061520210611114756.png" alt="Card image cap">*@
                    <div class="card-body">
                        <h5 class="card-title">@item.Key.Signature @item.Key.Name - @item.Value</h5>
                        <p class="card-text">@item.Key.Description</p>
                    </div>
                    <div class="card-footer">
                        <div class="card-footer">
                            @*<small class="text-muted">Last updated 3 mins ago</small>*@
                            <a class="nav-link text-dark" asp-route-courseId="@item.Key.Id" asp-controller="Course" asp-action="Index" style="text-decoration: none;">Go to course</a>
                        </div>
                    </div>
                </div>
            }
            <br />
        </div>
        @*<div class="tab-pane fade text-center" id="tagged">
                <p class="lead">Help people tag you.</p>
                <a href="#a" class="btn btn-info btn-pill">Find Friends</a>
            </div>*@
    </div>

</div>


