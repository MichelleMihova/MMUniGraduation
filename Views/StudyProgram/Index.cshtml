@model MMUniGraduation.ViewModels.IndexViewModel

<style>
    .img-box {
        width: 100%;
        height: 100%;
    }

    .p-desc {
        text-align: justify;
    }

    button {
        border-radius: 1em;
    }
</style>

<h2 style="text-align: center; padding-top: 1em; ">Our Study Programs</h2>
<hr />
<div class="container">
    @{int cnt = 0;
        foreach (var program in Model.StudyPrograms)
        {
            cnt = cnt + 1;
            if (cnt % 2 != 0)
            {
                <div class="row">
                    <div class="col" asp-route-id="@program.Id">
                        <h5>@program.Name</h5>
                        <p class="p-desc">@program.Description</p>
                        <a class="btn btn-outline-info" asp-route-studyProgramId="@program.Id" asp-controller="Course" asp-action="AllCourses" style="text-decoration: none;">View all @program.Name courses</a>
                    </div>
                    <div class="col">
                        <img src="@program.Image" class="img-box" alt="Responsive image">
                    </div>
                </div>
                <hr />
            }
            else
            {
                <div class="row" asp-route-id="@program.Id">
                    <div class="col">
                        <img src="@program.Image" class="img-box" alt="Responsive image">
                    </div>
                    <div class="col">
                        <h5>@program.Name</h5>
                        <p>@program.Description</p>
                        <div>
                            <a class="btn btn-outline-info" asp-route-studyProgramId="@program.Id" asp-controller="Course" asp-action="AllCourses" style="text-decoration: none;">Go to @program.Name courses</a>
                        </div>
                    </div>
                </div>
                <hr />
            }
        }
    }
</div>