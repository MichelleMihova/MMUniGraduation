@model MMUniGraduation.ViewModels.AllCoursesViewModel

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-heading alert-dismissible" style="color: mediumseagreen; font-weight: bold; text-align: center">
        @this.TempData["Message"]
    </div>
}
<style>
    .img-box {
        width: 100%;
        height: 100%;
    }

    .p-desc {
        text-align: justify;
    }

    button {
        border-radius: 1em;
    }
</style>

<h2 style="text-align: center; padding-top: 1em; ">Our @Model.Signature Courses</h2>
<br />
<hr />
@if (User.Identity.IsAuthenticated && User.IsInRole("Student"))
{
    if (@Model.NextCourseName != null)
    {
        <div style="text-align: center; padding-top: 1em; ">
            <h4>Course suggestions</h4>
            <p>@Model.NextCourseName</p>
        </div>
    }
    <hr />
}

@foreach (var course in Model.AllCourses.OrderBy(x => x.ParetntId))
{
    <div class="row">
        <div class="col" asp-route-id="@course.Id">
            <h5>@course.Signature @course.Name</h5>
            <p class="p-desc">@course.Description</p>

            @if (User.Identity.IsAuthenticated && User.IsInRole("Student"))
            {
                @if (course.CourseStartDate <= DateTime.Now)
                {
                    @if (Model.PassedCourses.Contains(course))
                    {
                        <div>
                            <a class="btn btn-outline-dark" asp-route-courseId="@course.Id" asp-controller="Course" asp-action="AssignUserToCourse" style="text-decoration: none;">Passed</a>
                        </div>
                    }
                    else if (Model.CurrentUserCourse != null && Model.CurrentUserCourse.Equals(course))
                    {
                        <div>
                            <a class="btn btn-outline-success" asp-route-courseId="@course.Id" asp-controller="Course" asp-action="AssignUserToCourse" style="text-decoration: none;">View it</a>
                        </div>
                    }
                    else
                    {
                        <div>
                            <a class="btn btn-outline-info" asp-route-courseId="@course.Id" asp-controller="Course" asp-action="AssignUserToCourse" style="text-decoration: none;">Start now!</a>
                        </div>
                    }
                }

            }
            else
            {
                <div>
                    <a class="btn btn-outline-info" asp-route-courseId="@course.Id" asp-controller="Course" asp-action="AssignUserToCourse" style="text-decoration: none;">View</a>
                </div>
            }
        </div>
    </div>
    <hr />
}
<div>
    <a asp-controller="StudyProgram" asp-action="Index">Go Back</a>
</div>