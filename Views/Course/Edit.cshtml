    {
        <div class="container">
            <div class="card">
                <div class="card-header" id="accordion_@i">
                    <h5 class="mb-0">
                        <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseOne_@i" aria-expanded="false" aria-controls="collapseOne">
                            @lecture.Name
                        </button>
                    </h5>
                </div>
                <div id="collapseOne_@i" class="collapse" aria-labelledby="headingOne" data-parent="#accordion_@i">
                    <form asp-controller="Course" asp-action="Edit" enctype="multipart/form-data">
                        <div class="card-body" style="text-align:end;">
                            <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="2" style="margin-bottom:1em;" placeholder="Lecture Description...">@lecture.Description</textarea>
                            @*<button class="btn btn-outline-secondary btn-outline-info" type="button" style="text-align:end;">Upload</button>*@
                        </div>

                        @*<div class="form-group">
                            <label>Coure Start Date</label>
                            <input asp-for="CourseStartDate" class="form-control" value=@lecture.DateTimeToShow.ToString() />
                            <span asp-validation-for="CourseStartDate" class="text-danger"></span>
                        </div>*@

                        <div class="card-body">
                            Date of performance: @lecture.DateTimeToShow
                            <input type="datetime-local" id="meeting-time"
                                   name="meeting-time" value=@lecture.DateTimeToShow.ToString()>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col">
                                    <ul>
